<%- include("partials/header"); -%>

	<h1>Delete page</h1>

	<p>The things you delete will be permanent. So, take your time and delete the content. </p>

	<% posts.forEach(function (post) { %>
		<h2><%= post.title %></h2>
		<p>
		<%= post.content.substring(0, 300) %>...
		<form action="/deletePost" method="post">
			<button type="submit" name="deleteId" value="<%= post._id %>">Delete</button>
		</form>
		</p>
	<% }); %>

<%- include("partials/footer"); -%>